<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:view="com.view.*"
	width="100%"
	height="100%">
<mx:Style>
	.title {
		font-family: "Trebuchet MS";
		font-size: 32;
		font-weight: bold;
		color: #330000;
	}
</mx:Style>
<mx:Script>
	<![CDATA[
		import mx.collections.ArrayCollection;
		import com.vo.datasourceVO;
		
		[Bindable]
  	 	public var datasources: ArrayCollection; 
  	 	[Bindable]
  	 	public var tables: ArrayCollection; 
  	 	[Bindable]
  	 	public var datasource: datasourceVO;
  	 	[Bindable]
  	 	public var templates: ArrayCollection; 
	]]>
</mx:Script>
	<mx:VBox width="100%" height="100%" horizontalAlign="center">
		<mx:Label text="Illudium PU-36 Code Generator" width="850" styleName="title" toolTip="Where's the kaboom? There was supposed to be an earth shattering kaboom!" />
		<mx:HBox width="100%" height="100%" horizontalAlign="center" paddingTop="10">
			<mx:VBox width="300" height="100%">
				<view:DsnSelectPanel datasources="{datasources}" />
				<view:FormDetailsPanel tables="{tables}" datasource="{datasource}" templates="{templates}" />
			</mx:VBox>
			<view:GeneratedTabsVBox id="generatedTabs" />
		</mx:HBox>
	</mx:VBox>
</mx:Canvas>
